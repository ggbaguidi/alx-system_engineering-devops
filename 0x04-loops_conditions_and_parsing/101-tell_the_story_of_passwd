#!/usr/bin/env bash
# Path to the passwd file
passwd_file="/etc/passwd"

# Check if the file exists before proceeding
if [ -e "$passwd_file" ]; then
    # Read the file line by line using a while loop and IFS
    while IFS=: read -r username code uid gid info home shell; do
        # Extract additional user ID info from the 5th field (info field)
        info=$(echo "$info" | cut -d ',' -f 5)
        
        # Output the story based on the extracted information
        echo "The user $username is part of the $gid gang, lives in $home, and rides $shell. $uid's place is protected by the passcode $code, more info about the user here: $info"
    done < "$passwd_file"
else
    echo "The file $passwd_file does not exist."
fi

